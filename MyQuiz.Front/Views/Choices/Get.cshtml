

@model List<MyQuiz.Dtos.QuestionChoiceDto.ChoiceUpdeatDto>
@{
    ViewData["Title"] = "Lab List";

    int currentPage = ViewBag.PageNumber;
    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize);
}


<form method="get" asp-action="Index" class="d-flex align-items-center my-3">
    <div class="input-group w-50">
        <span class="input-group-text bg-info text-white" id="search-label">
            <i class="bi bi-search"></i> Search
        </span>
        <input type="text" autocomplete="off" class="form-control" name="searchText" value="@ViewBag.SearchText" placeholder="Enter search text..." aria-label="Search by name" aria-describedby="search-label">
        <button class="btn btn-outline-info" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
</form>


<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success shadow-lg">
        <i class="bi bi-plus-circle me-1"></i> Create New Choice
    </a>
</div>


@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Choice Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Choice in Model)
                {
                    <tr>
                        <td>@Choice.ChoiceName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Choice.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <button type="button" class="btn btn-sm btn-danger" onclick="showDeleteModal(@Choice.Id)">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="text-muted">Total Records: @ViewBag.TotalCount</p>
}
else
{
    <div class="alert alert-info">No records found.</div>
}


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-searchText="@ViewBag.SearchText" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@ViewBag.PageSize">
                <i class="bi bi-chevron-left"></i>
            </a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-searchText="@ViewBag.SearchText" asp-route-pageNumber="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
            </li>
        }

        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-searchText="@ViewBag.SearchText" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@ViewBag.PageSize">
                <i class="bi bi-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Choice? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(id) {
        const form = document.getElementById('deleteForm');
        form.action = `/Choices/Delete/${id}`;
        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>
