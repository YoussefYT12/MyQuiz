

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Type Selection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #89f7fe, #66a6ff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-container {
            display: flex;
            gap: 30px;
        }

        .card {
            width: 250px;
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            }

            .card img {
                width: 80px;
                margin-bottom: 15px;
            }

        .btn-custom {
            width: 100%;
            background-color: #007bff;
            color: #fff;
            font-size: 18px;
            border-radius: 8px;
            margin-top: 15px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        h2 {
            text-align: center;
            color: #fff;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div>
        <h2>Select Your Login Type</h2>
        <div class="card-container">
            
            <div class="card">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Admin">
                <h4>Admin</h4>
                <p>Manage users, quizzes, and questions.</p>
                <a href="/Account/Login/" class="btn btn-custom">Login as Admin</a>
            </div>
            
            <div class="card">
                <img src="https://cdn-icons-png.flaticon.com/512/2922/2922561.png" alt="Student">
                <h4>Student</h4>
                <p>Take quizzes and view your results.</p>
                <a href="/Register/Create" class="btn btn-custom">Login as Student</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
