@{
    Layout = null;
}
@model MyQuiz.Front.Models.UserLoginAdmin

@{
    ViewData["Title"] = "Log in";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #2980b9, #6dd5fa);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-box {
        background-color: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0px 0px 15px rgba(0,0,0,0.2);
    }

    .form-control:focus {
        border-color: #2980b9;
        box-shadow: none;
    }

    .error-message {
        color: red;
        font-weight: bold;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-5 login-box">
        <h3 class="text-center text-primary mb-4">  </h3>

        <form asp-action="Login" method="post" onsubmit="return validateLogin();">
            <div class="mb-3">
                <label class="form-label">  </label>
                <input type="text" class="form-control" id="AdminName" name="AdminName" placeholder="Name of Officials" required />
            </div>

            <div class="mb-3">
                <label class="form-label"> </label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="********" required />
            </div>

            <div id="error-msg" class="error-message mb-3"></div>

            <button type="submit" class="btn btn-primary w-100"> </button>
        </form>
    </div>
</div>

@section Scripts {
   
    <script>
        function validateLogin() {
            const username = document.getElementById("AdminName").value.trim();
            const password = document.getElementById("Password").value.trim();
            const errorDiv = document.getElementById("error-msg");

            if (username !== "Yossef" || password !== "0987654321") {
                errorDiv.textContent = "❌ Errrorrr";
                return false;
            }

            window.location.href = '/Admins/Create';
            return false;
        }
    </script>

}
